{
  "info": {
    "name": "WhatsApp Clone API",
    "description": "API endpoints for WhatsApp clone authentication flow",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "1. Send Verification Code",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phoneNumber\": \"+201234567890\"\n}"
            },
            "url": {
              "raw": "http://localhost:3030/api/auth/send-code",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3030",
              "path": ["api", "auth", "send-code"]
            }
          }
        },
        {
          "name": "2. Verify Code",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phoneNumber\": \"+201234567890\",\n  \"code\": \"123456\"\n}"
            },
            "url": {
              "raw": "http://localhost:3030/api/auth/verify-code",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3030",
              "path": ["api", "auth", "verify-code"]
            }
          }
        },
        {
          "name": "3. Complete Profile",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer YOUR_TOKEN_HERE"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"profilePicture\": \"https://example.com/photo.jpg\",\n  \"description\": \"Hey there! I'm using WhatsApp\"\n}"
            },
            "url": {
              "raw": "http://localhost:3030/api/auth/complete-profile",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3030",
              "path": ["api", "auth", "complete-profile"]
            }
          }
        },
        {
          "name": "4. Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer YOUR_TOKEN_HERE"
              }
            ],
            "url": {
              "raw": "http://localhost:3030/api/auth/me",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3030",
              "path": ["api", "auth", "me"]
            }
          }
        },
        {
          "name": "5. Update Profile",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer YOUR_TOKEN_HERE"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Name\",\n  \"description\": \"Updated description\"\n}"
            },
            "url": {
              "raw": "http://localhost:3030/api/auth/profile",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3030",
              "path": ["api", "auth", "profile"]
            }
          }
        },
        {
          "name": "6. Load Chats",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer YOUR_TOKEN_HERE"
              }
            ],
            "url": {
              "raw": "http://localhost:3030/api/auth/chats",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3030",
              "path": ["api", "auth", "chats"]
            }
          }
        }
      ]
    }
  ]
}
